<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RatingStar.MovieDetails.Secondary">
        <item name="android:layout_marginStart">3.25dp</item>
    </style>

    <style name="RatingStar.MovieDetails">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="title">
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_item">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:shadowColor">?attr/colorOnSurfaceInverse</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tag">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tag</item>
    </style>

    <style name="reviews">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="movie_cast">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actor_name">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="back">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="min">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#565665</item>
    </style>

</resources>
