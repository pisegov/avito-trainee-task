<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Button.BottomSheet" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">6dp</item>
        <item name="android:backgroundTint">?attr/colorSurfaceBright</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="FilterContainer">
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/colorSurfaceContainerHighest</item>
    </style>

    <style name="FilterTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>